<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.mda.coordinatetracker.demos">

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application android:debuggable="true" android:label="@string/app_name" android:name="com.mda.coordinatetracker.demos.SampleApplication">
        <activity android:label="@string/app_name" android:name="com.mda.coordinatetracker.demos.SampleActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:exported="false" android:name="com.mda.coordinatetracker.CoordinateService">
            <intent-filter>
                <action android:name="com.mda.coordinatetracker.ACTION_GET_CURRENT_LOCATION"/>
                <action android:name="com.mda.coordinatetracker.ACTION_DIRECT_GEOCODE"/>
                <action android:name="com.mda.coordinatetracker.START"/>
                <action android:name="com.mda.coordinatetracker.STOP"/>
            </intent-filter>
        </service>
    </application>
</manifest>
